<%= form_for [@question, Answer.new] do |f| %>
    <div class="field">
      <%= f.text_area :description, rows: 2, class: 'span8' %>
    </div>
    <div class="actions">
      <% if @voted.include? @question.id.to_s %>
      You have already voted.
      <% else %>
      <%= f.submit class: 'btn' %>
      <% end %>
    </div>
<% end %>
